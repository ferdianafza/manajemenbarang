<%= stylesheet_link_tag("auth/auth") %>
<div class="container">
	<div class="screen">
		<div class="screen__content">
      <center>
        <h2>Log in</h2>
      </center>
			<%= form_for(resource, as: resource_name,class: "login", url: session_path(resource_name)) do |f| %>
				<div class="login__field">
					<i class="login__icon fas fa-user"></i>
          <%= f.email_field :email,class: "login__input",placeholder:"Email", autofocus: true, autocomplete: "email" %>
				</div>
				<div class="login__field">
					<i class="login__icon fas fa-lock"></i>
          <%= f.password_field :password, class: 'login__input', autocomplete: "current-password" %>
				</div>
        <div class="">
          <%= f.submit "Log in", class: "button login__submit" %>
        </div>
        <%= render "staffs/shared/links" %>
			<% end %>
		</div>
		<div class="screen__background">
			<span class="screen__background__shape screen__background__shape4"></span>
			<span class="screen__background__shape screen__background__shape3"></span>
			<span class="screen__background__shape screen__background__shape2"></span>
			<span class="screen__background__shape screen__background__shape1"></span>
		</div>
	</div>
</div>
